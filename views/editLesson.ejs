<html>

<head>
  <%- include('head') -%>
</head>
<body>
  <%- include('header') -%>
 
      <div class="container" style="margin-top: 100px;display: flex;justify-content: center;">
        <form style="width: 50%;" action="/vocabulary/editLesson" method="POST">
            <h1 style="text-align: center;">Update Lesson</h1>
            <input type="hidden" value="<%= oneLesson._id %>" name="_id" >
            <div class="form-group">
              <label for="exampleInputEmail1">Name lesson : </label>
              <input type="text" autocomplete="off"  name="name" class="form-control" value="<%= oneLesson.name %>" id="exampleInputEmail1" aria-describedby="emailHelp" >
              
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Tittle lesson : </label>
                <input type="text" autocomplete="off"  name="tittle" class="form-control" value="<%= oneLesson.tittle %>" id="exampleInputEmail1" aria-describedby="emailHelp">
                
              </div>
              <div class="form-group">
                <label for="exampleInputEmail1">Translate tittle lesson : </label>
                <input type="text" name="translateTittle" autocomplete="off"  value="<%= oneLesson.translateTittle %>" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
    
              </div>
            <button type="submit" class="btn btn-primary" style="width: 100%;">Save</button>
          </form>
      </div>
</body>

</html>